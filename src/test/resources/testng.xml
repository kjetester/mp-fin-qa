<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Suite1" parallel="classes" thread-count="4">

    <parameter name="window-width" value="1200"/>
    <parameter name="window-height" value="800"/>

    <test name="Smoke Test">
        <classes>
            <class name="SmokeTest" />
        </classes>
    </test>

    <test name="Registration Tests" >
        <groups>
            <run>
                <include name="registration"/>
            </run>
        </groups>
        <classes>
            <class name="registration.UserWithNoPatronymicTest" />
        </classes>
    </test>
    
</suite>
